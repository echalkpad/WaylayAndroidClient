<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.waylay.client"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="11" />
    
    <supports-screens android:resizeable="true"
                  android:anyDensity="true" />
    
   <uses-permission android:name="android.permission.INTERNET"/>
   <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
   <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
   <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
   <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- for the beacons -->
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
   
    <application
        android:name="waylay.client.WaylayApplication"
        android:icon="@drawable/globe"
        android:label="@string/app_name"
        android:allowBackup="true">
        <activity
            android:name="waylay.client.activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
       
       <activity android:name="waylay.client.activity.MachinesActivity" ></activity>
       <activity android:name="waylay.client.activity.ScenarioActivity" ></activity>
       <activity android:name="waylay.client.activity.UsersActivity" ></activity>
       <activity android:name="waylay.client.activity.SetupActivity" ></activity> 
       <activity android:name="waylay.client.activity.AlertDialogActivity" ></activity> 
       <activity android:name="waylay.client.activity.PlotActivity" ></activity>
       <activity android:name="waylay.client.activity.LocalSensorActivity" ></activity>

        <service android:name="com.estimote.sdk.service.BeaconService"
            android:exported="false"/>
       
         
    </application>

</manifest>